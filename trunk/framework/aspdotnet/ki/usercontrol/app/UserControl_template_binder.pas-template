unit UserControl_template_binder;

interface

uses
  ki_web_ui,
  Microsoft.Web.UI.WebControls,
  System.Data,
  System.Drawing,
  System.Web,
  System.Web.UI,
  System.Web.UI.WebControls,
  System.Web.UI.HtmlControls,
  UserControl1,
  UserControl2,
  UserControl3;

type
  p_type =
    RECORD
    be_loaded: boolean;
    END;
  TWebUserControl_template_binder = class(ki_web_ui.usercontrol_class)
  {$REGION 'Designer Managed Code'}
  strict private
    procedure InitializeComponent;
    procedure TWebUserControl_template_binder_PreRender(sender: System.Object;
      e: System.EventArgs);
    procedure TabStrip1_SelectedIndexChange(sender: System.Object; e: System.EventArgs);
  {$ENDREGION}
  strict private
    p: p_type;
    procedure Page_Load(sender: System.Object; e: System.EventArgs);
  strict protected
    TabStrip1: Microsoft.Web.UI.WebControls.TabStrip;
    MultiPage1: Microsoft.Web.UI.WebControls.MultiPage;
    PlaceHolder1: System.Web.UI.WebControls.PlaceHolder;
    PlaceHolder2: System.Web.UI.WebControls.PlaceHolder;
    PlaceHolder3: System.Web.UI.WebControls.PlaceHolder;
    procedure OnInit(e: System.EventArgs); override;
  private
    { Private Declarations }
  public
    { Public Declarations }
  published
    function Fresh: TWebUserControl_template_binder;
  end;

implementation

uses
  appcommon,
  ki,
  System.Collections,
  system.configuration;

const
  TSSI_0 = 0;
  TSSI_1 = 1;
  TSSI_2 = 2;

procedure TWebUserControl_template_binder.Page_Load(sender: System.Object; e: System.EventArgs);
begin
  //
  if not p.be_loaded then begin
    //
    //
    p.be_loaded := TRUE;
    //
  end;
  //
end;

procedure TWebUserControl_template_binder.OnInit(e: System.EventArgs);
begin
  //
  // Required for Designer support
  //
  InitializeComponent;
  inherited OnInit(e);
  //
  if IsPostback
    and (session['UserControl_template_binder.p'] <> nil)
    and (session['UserControl_template_binder.p'].GetType.namespace = p.GetType.namespace)
  then begin
    p := p_type(session['UserControl_template_binder.p']);
  end else begin
    //
    p.be_loaded := FALSE;
    //
    PlaceHolder1.controls.Add(TWebUserControl1(LoadControl('~/usercontrol/app/UserControl1.ascx')).Fresh);
    //
  end;
  //
end;

procedure TWebUserControl_template_binder.TabStrip1_SelectedIndexChange(sender: System.Object;
  e: System.EventArgs);
begin
  case TabStrip1.selectedindex of
  TSSI_0:
    PlaceHolder1.controls.Add(TWebUserControl1(LoadControl('~/usercontrol/app/UserControl1.ascx')).Fresh);
  TSSI_1:
    PlaceHolder2.controls.Add(TWebUserControl2(LoadControl('~/usercontrol/app/UserControl2.ascx')).Fresh);
  TSSI_2:
    PlaceHolder3.controls.Add(TWebUserControl3(LoadControl('~/usercontrol/app/UserControl3.ascx')).Fresh);
  end;
end;

{$REGION 'Designer Managed Code'}
/// <summary>
/// Required method for Designer support -- do not modify
/// the contents of this method with the code editor.
/// </summary>
procedure TWebUserControl_template_binder.InitializeComponent;
begin
  Include(Self.TabStrip1.SelectedIndexChange, Self.TabStrip1_SelectedIndexChange);
  Include(Self.Load, Self.Page_Load);
  Include(Self.PreRender, Self.TWebUserControl_template_binder_PreRender);
end;
{$ENDREGION}

procedure TWebUserControl_template_binder.TWebUserControl_template_binder_PreRender(sender: System.Object;
  e: System.EventArgs);
begin
  session.Remove('UserControl_template_binder.p');
  session.Add('UserControl_template_binder.p',p);
end;

function TWebUserControl_template_binder.Fresh: TWebUserControl_template_binder;
begin
  session.Remove('UserControl_template_binder.p');
  Fresh := self;
end;

end.
